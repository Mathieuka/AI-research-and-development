{
  "name": "sandbox",
  "version": "1.0.0",
  "description": "Sandbox app for various research and development projects focusing on the development and integration of AI agents",
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "format": "pnpm biome format ",
    "format:fix": "pnpm biome format --write",
    "lint": "pnpm biome lint",
    "start:agent_langGraph": "node --env-file=.env --import=tsx --watch src/agent_langGraph.ts.ts",
    "start:agent_with_custom_tool_langGraph": "node --env-file=.env --import=tsx --watch src/agent_with_custom_tool_langGraph.ts",
    "start:sentiment_analysis": "node --env-file=.env --import=tsx --watch src/sentiment_analysis.ts",
    "start:simple_llm_with_chat_model": "node --env-file=.env --import=tsx --watch src/simple_llm_with_chat_model.ts"
  },
  "license": "ISC",
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@repo/biome-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "tsx": "^4.19.3"
  },
  "dependencies": {
    "@huggingface/transformers": "^3.3.3",
    "@langchain/community": "^0.3.34",
    "@langchain/core": "^0.3.42",
    "@langchain/langgraph": "^0.2.52",
    "@langchain/openai": "^0.4.4",
    "@tavily/core": "^0.3.1",
    "zod": "^3.24.2"
  }
}
